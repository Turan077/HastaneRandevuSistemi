@model HastaneRandevu.Models.Randevu

@{
    ViewBag.Title = "Randevu Güncelle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4>Randevu Güncelle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Guncelle" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="AdSoyad" class="form-label"></label>
                            <input asp-for="AdSoyad" class="form-control" />
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Telefon" class="form-label"></label>
                            <input asp-for="Telefon" class="form-control" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Bolum" class="form-label"></label>
                            <input asp-for="Bolum" class="form-control" />
                            <span asp-validation-for="Bolum" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Tarih" class="form-label"></label>
                            <input asp-for="Tarih" type="date" class="form-control" />
                            <span asp-validation-for="Tarih" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-warning w-100">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}