@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container py-5">
    <h1 class="text-center mb-5">Hizmetlerimiz</h1>
    
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body text-center p-4">
                    <i class="fas fa-stethoscope fa-3x text-primary mb-3"></i>
                    <h3 class="h5 mb-3">Genel Muayene</h3>
                    <p class="text-muted">Uzman doktorlarımız tarafından detaylı genel sağlık kontrolü ve muayene hizmetleri.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body text-center p-4">
                    <i class="fas fa-heartbeat fa-3x text-primary mb-3"></i>
                    <h3 class="h5 mb-3">Kardiyoloji</h3>
                    <p class="text-muted">Kalp sağlığı kontrolleri, EKG, ekokardiyografi ve kardiyolojik tedavi hizmetleri.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body text-center p-4">
                    <i class="fas fa-brain fa-3x text-primary mb-3"></i>
                    <h3 class="h5 mb-3">Nöroloji</h3>
                    <p class="text-muted">Beyin ve sinir sistemi hastalıklarının teşhis ve tedavi hizmetleri.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body text-center p-4">
                    <i class="fas fa-bone fa-3x text-primary mb-3"></i>
                    <h3 class="h5 mb-3">Ortopedi</h3>
                    <p class="text-muted">Kemik, eklem ve kas sistemi hastalıklarının tedavisi ve rehabilitasyon hizmetleri.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body text-center p-4">
                    <i class="fas fa-tooth fa-3x text-primary mb-3"></i>
                    <h3 class="h5 mb-3">Diş Sağlığı</h3>
                    <p class="text-muted">Diş tedavisi, implant ve estetik diş hekimliği hizmetleri.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body text-center p-4">
                    <i class="fas fa-eye fa-3x text-primary mb-3"></i>
                    <h3 class="h5 mb-3">Göz Sağlığı</h3>
                    <p class="text-muted">Göz muayenesi, gözlük reçetesi ve göz hastalıkları tedavi hizmetleri.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style> 