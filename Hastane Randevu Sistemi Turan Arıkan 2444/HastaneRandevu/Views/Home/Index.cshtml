@{
    ViewData["Title"] = "Hoş Geldiniz";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Sağlığınız Bizim Önceliğimiz</h1>
                <p class="lead mb-4">Profesyonel sağlık ekibimizle yanınızdayız. Randevu alarak sağlık hizmetlerimizden yararlanabilirsiniz.</p>
                <a href="/Randevu" class="btn btn-light btn-lg">Hemen Randevu Al</a>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="https://img.freepik.com/free-vector/doctor-examining-patient-clinic-illustrated_23-2148856559.jpg" alt="Sağlık Ekibimiz" class="img-fluid rounded">
            </div>
        </div>
    </div>
</div>

<!-- Hizmetlerimiz -->
<div class="container my-5">
    <h2 class="text-center mb-5">Hizmetlerimiz</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-light-primary rounded-circle mx-auto mb-4">
                        <i class="fas fa-stethoscope fa-2x text-primary"></i>
                    </div>
                    <h4>Uzman Doktor Kadrosu</h4>
                    <p class="text-muted">Alanında uzman doktorlarımızla hizmetinizdeyiz.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-light-success rounded-circle mx-auto mb-4">
                        <i class="fas fa-calendar-check fa-2x text-success"></i>
                    </div>
                    <h4>Online Randevu</h4>
                    <p class="text-muted">Hızlı ve kolay online randevu sistemi.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-light-info rounded-circle mx-auto mb-4">
                        <i class="fas fa-heartbeat fa-2x text-info"></i>
                    </div>
                    <h4>Modern Tıbbi Cihazlar</h4>
                    <p class="text-muted">En son teknoloji tıbbi cihazlarla hizmetinizdeyiz.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hakkımızda -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="https://img.freepik.com/free-vector/medical-technology-doctor-holding-tablet_107791-3829.jpg" alt="Hakkımızda" class="img-fluid rounded">
            </div>
            <div class="col-lg-6">
                <h2 class="mb-4">Hakkımızda</h2>
                <p class="lead">Sağlık hizmetlerinde güven ve kalite anlayışıyla hizmet veriyoruz.</p>
                <p>Uzman doktor kadromuz ve deneyimli sağlık personelimizle, hastalarımıza en iyi sağlık hizmetini sunmak için çalışıyoruz. Modern tıbbi cihazlarımız ve konforlu hastane ortamımızla sağlığınıza değer katıyoruz.</p>
                <a href="/Home/About" class="btn btn-outline-primary mt-3">Daha Fazla Bilgi</a>
            </div>
        </div>
    </div>
</div>

<!-- İletişim Bilgileri -->
<div class="bg-dark text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4 mb-md-0">
                <h5>İletişim</h5>
                <p class="mb-1"><i class="fas fa-phone me-2"></i> 0 (212) 123 45 67</p>
                <p class="mb-1"><i class="fas fa-envelope me-2"></i> info@hastanerandevu.com</p>
                <p class="mb-0"><i class="fas fa-map-marker-alt me-2"></i> Örnek Mah. Hastane Cad. No:123 İstanbul</p>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <h5>Çalışma Saatleri</h5>
                <p class="mb-1">Pazartesi - Cuma: 08:30 - 18:00</p>
                <p class="mb-1">Cumartesi: 09:00 - 15:00</p>
                <p class="mb-0">Pazar: Kapalı</p>
            </div>
            <div class="col-md-4">
                <h5>Bizi Takip Edin</h5>
                <div class="social-links">
                    <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
        padding: 5rem 0;
    }
    .icon-box {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .social-links a {
        display: inline-block;
        width: 36px;
        height: 36px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        text-align: center;
        line-height: 36px;
        margin-right: 10px;
        transition: all 0.3s ease;
    }
    .social-links a:hover {
        background: #0d6efd;
        transform: translateY(-3px);
    }
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1) !important;
    }
</style>

